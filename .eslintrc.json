{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "standard-with-typescript",
    "prettier",
    "plugin:react/recommended"
  ],
  "plugins": ["react"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/consistent-type-definitions": "off", //permite criar interfaces e typealias
    "@typescript-eslint/strict-boolean-expressions": "off", //permite comparar "!variavael",
    "@typescript-eslint/camelcase": "off",
    "react/jsx-uses-vars": "error"
  }
}
